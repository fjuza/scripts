#!/usr/bin/env perl
#
# Given a cpanfile, uses cpanm to install it
#

use strict;
use warnings;

my $cpanfile = shift @ARGV;
die "Usage: x-cpan-install-cpanfile cpanfile [more cpanm options]\n" unless $cpanfile and -r $cpanfile;

system('cpanm', @ARGV, '--installdeps', '--cpanfile', $cpanfile, '.');
