#!/bin/sh

## make sure all is up-to-date
brew upgrade

## General utils we love
brew install plenv perl-build nodeenv bash-completion git autojump nmap openssl \
             docker-compose-completion docker-completion docker-compose-completion \
             go hugo lego gnupg pinentry direnv

brew install diff-so-fancy   ## our git config uses this

brew cask install aws-vault


# others
brew install ag git-extras


## git compilation requires these
brew install autoconf
